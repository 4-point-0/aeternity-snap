{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "useUnknownInCatchVariables": false,
    "jsx": "preserve",
    "sourceMap": true,
    "strict": true,
    "strictFunctionTypes": false,
    "target": "ES2021"
  },
  "exclude": ["**/__snapshots__/**", "**/test/**", "**/*.test.ts"]
}
